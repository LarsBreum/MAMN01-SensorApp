<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.sensorsapp.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_accActivity"
            app:destination="@id/accActivity" />
    </fragment>
    <activity
        android:id="@+id/sensorActivity"
        android:name="com.example.sensorsapp.SensorActivity"
        android:label="activity_sensor"
        tools:layout="@layout/activity_sensor" />
    <activity
        android:id="@+id/accActivity"
        android:name="com.example.sensorsapp.AccActivity"
        android:label="activity_acc"
        tools:layout="@layout/activity_acc" />
</navigation>